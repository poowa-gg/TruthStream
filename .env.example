# TruthStream Environment Variables

# API Configuration
API_BASE_URL=https://api.truthstream.app
XION_NETWORK=testnet
XION_CHAIN_ID=xion-testnet-1

# Database
MONGODB_URI=mongodb://localhost:27017/truthstream

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# XION Configuration
XION_RPC_URL=https://rpc.xion-testnet-1.burnt.com
XION_CONTRACT_ADDRESS=xion1truthstream...

# zkTLS Configuration
ZKTLS_API_ENDPOINT=https://api.truthstream.app/zktls
ZKTLS_API_KEY=your-zktls-api-key

# Third-party APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
STRIPE_API_KEY=your-stripe-api-key

# Storage
IPFS_GATEWAY=https://ipfs.io/ipfs/
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key

# Social Media APIs (for zkTLS verification)
INSTAGRAM_CLIENT_ID=your-instagram-client-id
TWITTER_API_KEY=your-twitter-api-key
SPOTIFY_CLIENT_ID=your-spotify-client-id

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key

# Development
NODE_ENV=development
DEBUG=true